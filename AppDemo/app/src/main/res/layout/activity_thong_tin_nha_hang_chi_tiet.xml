<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imgHinhAnh"
        android:layout_width="344dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvTen"
        android:layout_width="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/imgHinhAnh"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/residential_places"
        android:textStyle="bold"
        android:background="@drawable/custom_button"
        android:layout_height="wrap_content"
        android:text=" Tên Nhà Hàng: "
        />

    <ListView
        android:id="@+id/lvDanhGia"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTen" />


    <EditText
        android:id="@+id/editDanhGia"
        android:layout_width="254dp"
        android:layout_height="41dp"
        android:ems="10"
        app:layout_constraintRight_toLeftOf="@+id/buttonVietDanhGia"
        app:layout_constraintBottom_toBottomOf="parent"
        android:inputType="textPersonName"
        android:hint="Nhập vào đánh giá của bạn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        tools:layout_editor_absoluteY="522dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/buttonVietDanhGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/xl_button"
        android:text="Đánh giá" />




</android.support.constraint.ConstraintLayout>